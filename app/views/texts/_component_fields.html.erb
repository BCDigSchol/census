<ul class="list-group">
  <li class='component-fields nested-fields list-group-item row'>
    <div class="handle col-sm-1"></div>
    <div class="col-sm-11">
      <%= f.input :title, as: :string %>
      <%= f.input :pages, as: :string %>
      <%= f.input :genre, as: :string %>
      <%= f.input :text_type, as: :string %>
      <%= f.hidden_field :ordinal, as: :string, class: 'ordinal-num' %>
    </div>
    <%= link_to_remove_association "x", f, {:class => 'remove-link'} %>
  </li>
</ul>

