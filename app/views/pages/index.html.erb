<div class="col-md-6">
  <h2>Most recent comments</h2>
  <ul class="list-group">
    <% @comments.each do |comment| %>
        <li class="comment list-group-item">
          <%= comment.value %>
          <%= comment.text.title %>
        </li>
    <% end %>
  </ul>
</div>
