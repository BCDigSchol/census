<div class="row">
  <div class="col-md-8">
    <%= simple_form_for(@place) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :subdivision %>
          <%= f.association :country %>
          <%= f.input :latitude %>
          <%= f.input :longitude %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <h2>Appears in...</h2>
    <ul>
      <% if @texts %>
          <% @texts.each do |text| %>
              <li><%= link_to text.title, edit_text_path(text) %></li>
          <% end %>
      <% end %>
    </ul>
  </div>
</div>
