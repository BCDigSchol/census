<%= simple_form_for(@journal) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, as: :string %>
  </div>
  <div class="form-inputs">
    <% if @journal.new_record? %>
      <%= f.input :sort_title, as: :string, label: "Title used for sorting (Available to edit after this record has been created)", :disabled => true %>
    <% else %>
      <%= f.input :sort_title, as: :string, label: "Title used for sorting (required)", :disabled => false %>
    <% end %>
  </div>
    <div class="form-inputs">
      <%= f.input :issn, as: :string, label: "ISSN" %>
    </div>
    <div class="form-inputs">
      <%= f.association :place %>
    </div>
    <div class="form-inputs">
      <%= f.input :sponsoring_organization, label: "Sponsoring organization" %>
    </div>
    <div class="form-inputs">
      <%= f.input :indexed_range, label: "Range of volumes/issues indexed" %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
