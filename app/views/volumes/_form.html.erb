<%= simple_form_for(@volume) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title, as: :string %>
      <%= f.input :author, as: :string %>
      <%= f.input :date %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
