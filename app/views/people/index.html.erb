<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Greek full name</th>
      <th>Fist name</th>
      <th>Last name</th>
      <th>Birth</th>
      <th>Death</th>
      <th>Greek first name</th>
      <th>Greek last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.full_name %></td>
        <td><%= person.greek_full_name %></td>
        <td><%= person.fist_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.birth %></td>
        <td><%= person.death %></td>
        <td><%= person.greek_first_name %></td>
        <td><%= person.greek_last_name %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

