<div class="container">
  <div class="row">
    <h1 class="col-md-12"><%= @author.full_name %></h1>
  </div>

  <div class="row">
    <div class="col-md-7">
      <div class="row">
        <div class="pagination-stuff col-md-10">
          <%= paginate @texts %>
        </div>
      </div>
      <ul class="list-group" id="search-results">
        <% @texts.order(:sort_census_id).each do |text| %>
          <li class="list-group-item">
            <%= render 'shared/text_tombstone', text: text %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-5">
      <h3>Alternate names</h3>
      <ul>
        <% alt_name_list(@author).each do |name| %>
          <li>
            <%= name %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="back-link"><%= link_to 'Return to Browse All Authors', public_authors_path %></div>
  </div>
</div>