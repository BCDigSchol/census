<h1>Public::Authors#index</h1>
<p>Find me in app/views/public/authors/index.html.erb</p>

<div class="row">
  <%= alphabetical_paginate @alpha_params %>

  <div id="pagination_table" class="row">
    <h2><%= @letter %></h2>
    <ul>
    <% @authors.each do |author| %>
      <li>
        <%= link_to author.full_name, public_author_path(author) %>
      </li>
    <% end %>
    </ul>
  </div>
</div>