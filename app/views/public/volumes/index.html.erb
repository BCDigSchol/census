<h3>Browse all Volumes</h3>

<div class="row">
  <div class="pagination-stuff col-md-10">
    <%= paginate @volumes %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% @volumes.each do |vol| %>
      <ul class="list-group">
        <li class="list-group-item">
          <%= link_to (vol.title.blank? ? "[No title]" : vol.title), public_volume_path(vol) %>
        </li>
      </ul>
    <% end %>

    <%= paginate @volumes %>
  </div>
</div>