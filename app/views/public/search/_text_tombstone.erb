<div class="result-title">
  <%= link_to (text.title.blank? ? "[No title]" : @results_formatter.format(text.title)), public_text_path(text.id) %>
</div>
<div class="result-author">
  <%= text['_source'].authors_names %>
</div>
<div>
  Topic author: <%= text.topic_author.full_name %>
</div>
<% if text['_source'].census_id %>
<div>
  Entry Number: <%= text.census_id %>
</div>
<% end %>
<% if text['_source'].volume %>
  <div>
    In <cite><%= link_to_volume_from_search text['_source'].volume %></cite>  <%= formatted_journal_issue(text) %>
  </div>
<% end %>
<% if text['_source'].journal %>
  <div>
    In
    <cite><%= link_to_journal_from_search text['_source'].journal %></cite> <%= formatted_journal_issue(text) %>
  </div>
<% end %>

<% if text.has_key? 'highlight' %>
  <% if text.highlight.original_clean %>
    <div class="original-highlighted" data-field="original_cleaned"><%= ellipses_for_highlights(text.highlight.original_clean, text.original_clean).html_safe %></div>
  <% elsif text.highlight.original %>
    <div class="original-highlighted" data-field="original"><%= ellipses_for_highlights(text.highlight.original, text.original).html_safe %></div>
  <% end %>
<% end %>

