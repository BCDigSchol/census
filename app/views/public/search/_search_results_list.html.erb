<div class="results-list">
  <h3><%= page_entries_info @texts, entry_name: 'records' %></h3>

  <% if @texts.size > 0 %>
    <div class="row">
      <div class="col-md-7">
        <%= paginate @texts %>
      </div>
      <div class="col-md-5 sort_box">
        <label for="select_sort_order">Sort <span class="sr-only">all results</span> by</label>
        <%= select_tag 'select_sort_order', options_for_select(@sort_options, params[:sort]) %>
      </div>
    </div>
  <% end %>

  <ul class="list-group">
    <% @texts.each do |text| %>
      <li class="list-group-item">
        <%= render 'shared/text_tombstone', text: text %>
        <% if text.has_key? 'highlight' %>
          <% if text.highlight.original_clean %>
            <div class="original-highlighted" data-field="original_cleaned"><%= ellipses_for_highlights(text.highlight.original_clean, text.original_clean).html_safe %></div>
          <% elsif text.highlight.original %>
            <div class="original-highlighted" data-field="original"><%= ellipses_for_highlights(text.highlight.original, text.original).html_safe %></div>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= paginate @texts %>
</div>