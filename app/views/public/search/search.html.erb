<div class="container">
  <div class="row">
    <div class="col">
      <% if @search_type == "adv" %>
        <%# advanced search template %>
        <%= render 'advanced_search_form' %>
      <% else %>
        <%# keyword search template %>
        <%= render 'keyword_search_form' %>
      <% end %>
    </div>  <!-- col -->
  </div> <!-- row -->

  <div class="row" id="search-results">
    <% if @new_search %>
      <h4>Enter a search query.</h4>
    <% elsif @texts.nil? %>
      <h4>There are no texts containing the term <strong><%= params[:keyword] %></strong>.</h4>
    <% else %>
      <% if @search_type == "adv" %>
        <%= render 'advanced_search_results' %>
      <% else %>
        <%= render 'keyword_search_results' %>
      <% end %>
    <% end %>
  </div> <!-- row -->
  <script src="/js/public-js.js"></script>
</div> <!-- container -->