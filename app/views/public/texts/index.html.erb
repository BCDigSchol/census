<h3>Browse all Texts</h3>

<!-- sort drop down -->
<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Sort By: <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to 'Title', public_texts_path(:sort => "title") %></li>
    <li><%= link_to 'Author', public_texts_path(:sort => "author") %></li>
  </ul>
</div>
<p><pre>sorted by: <%= @sorted =%></pre></p>

<div class="row">
  <div class="pagination-stuff col-md-10">
    <%= paginate @texts %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% if @sorted == "author" %>
      <% texts_by_author(@texts).each do |author| %>
        <h3><%= author[:author] %></h3>
        <ul class="list-group">
          <% author[:texts].each do |text| %>
            <li class="<%= text.status.code %> list-group-item">
              <span class="census-id"><%= text.census_id %></span>
              <%= link_to (text.title.blank? ? "[No title]" : text.title), public_text_path(text) %>
            </li>
          <% end %>
        </ul>
      <% end %>
    <% else %>
      <% @texts.each do |text| %>
        <ul class="list-group">
            <li class="<%= text.status.code %> list-group-item">
              <span class="census-id"> (<%= text.census_id %>)</span>
              <%= link_to (text.title.blank? ? "[No title]" : text.title), public_text_path(text) %>
            </li>
        </ul>
      <% end %>
    <% end %>

    <%= paginate @texts %>
  </div>
</div>